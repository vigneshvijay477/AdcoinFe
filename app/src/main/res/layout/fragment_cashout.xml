<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vignesh.adcoinfe.cashout">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/app_ic" />

        <TextView
            android:id="@+id/c_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/logo"
            android:text="@string/title"
            android:textColor="@color/basic_blue"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/cashout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/c_name"
            android:text="Cash Out"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"/>

        <ImageView
            android:id="@+id/cash_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cashout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/cashout"/>

        <TextView
            android:id="@+id/ava_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/cashout"
            android:layout_below="@+id/cash_img"
            android:layout_marginTop="57dp"
            android:text="Available Cash : "
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cash_amo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ava_cash"
            android:layout_alignBottom="@+id/ava_cash"
            android:layout_toEndOf="@+id/ava_cash"
            android:text=" â‚¹ 100"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Transfer to Wallet"
            android:background="@drawable/button"
            android:layout_below="@id/cash_amo"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</FrameLayout>
